@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", new { area = "" }, htmlAttributes: new { @class = "nav-link", title = "Manage" })
        </li>
        <li class="nav-item"><a class = "nav-link" href="javascript:document.getElementById('logoutForm').submit()">Deconnexion</a></li>
    </ul>
    }
}
else 
{
<ul class="nav navbar-nav navbar-right">
    <li class="nav-item">@Html.ActionLink("S'inscrire", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link", id = "registerLink" })</li>
    <li class="nav-item">@Html.ActionLink("Se Connecter", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link", id = "loginLink" })</li>
</ul>
}
