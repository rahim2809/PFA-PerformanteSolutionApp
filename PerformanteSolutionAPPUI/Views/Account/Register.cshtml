@model PerformanteSolutionAPPUI.Models.RegisterViewModel
@{
    ViewBag.Title = "S'inscrire";
}

<h2>@ViewBag.Title.</h2>


<div class="container">

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-3"></div>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <div class="form-group">
                                @Html.Label("Role")
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3"></div>
                    </div>

                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                    <div class="col-lg-2 col-md-2 col-sm-2">
                        <div class="form-group">
                            @Html.Label("Nom D'utilisateur")
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                </div>

                <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-3"></div>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <div class="form-group">
                                @Html.Label("Nom Complet")
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3"></div>
                </div>

                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                    <div class="col-lg-2 col-md-2 col-sm-2">
                        <div class="form-group">
                            @Html.Label("Email")
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                </div>

                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                    <div class="col-lg-2 col-md-2 col-sm-2">
                        <div class="form-group">
                            @Html.Label("Telephone")
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                </div>

                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                    <div class="col-lg-2 col-md-2 col-sm-2">
                        <div class="form-group">
                            @Html.Label("Mot De Passe")
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                </div>

                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                    <div class="col-lg-2 col-md-2 col-sm-2">
                        <div class="form-group">
                            @Html.Label("Confirmation")
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                </div>



                <br />

                <div class="text-center">
                    <input class="btn btn-main btn-round-full" name="submit" type="submit" value="S'inscrire" />
                </div>

            }
        </div>
    </div>
</div>
<br />



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
