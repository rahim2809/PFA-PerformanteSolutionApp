@model BOL.AspNetEdition

@{
    ViewBag.Title = "DetailEdition";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container">

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">

            @using (Html.BeginForm())
            {

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">

                    <div class="col-lg-4 col-md-4 col-sm-4">

                        <div >
                            <img src="@Url.Content(Model.EventPhoto1)" class="img-responsive" />
                        </div>

                    </div>

                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-lg-1 col-md-1 col-sm-1"></div>
                            <div class="col-lg-2 col-md-2 col-sm-2">
                                <div class="form-group">
                                    @Html.DisplayNameFor(model => model.NomEdition)
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <div class="form-group">
                                    @Html.DisplayFor(model => model.NomEdition)
                                </div>
                            </div>
                            <div class="col-lg-1 col-md-1 col-sm-1"></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-1 col-md-1 col-sm-1"></div>
                            <div class="col-lg-2 col-md-2 col-sm-2">
                                <div class="form-group">
                                    @Html.DisplayNameFor(model => model.DateDebut)
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <div class="form-group">
                                    @Html.DisplayFor(model => model.DateDebut)
                                </div>
                            </div>
                            <div class="col-lg-1 col-md-1 col-sm-1"></div>
                        </div>

                        <div class="row">
                            <div class="col-lg-1 col-md-1 col-sm-1"></div>
                            <div class="col-lg-2 col-md-2 col-sm-2">
                                <div class="form-group">
                                    @Html.DisplayNameFor(model => model.DateFin)
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <div class="form-group">
                                    @Html.DisplayFor(model => model.DateFin)
                                </div>
                            </div>
                            <div class="col-lg-1 col-md-1 col-sm-1"></div>
                        </div>

                    </div>
                </div>

            }
        </div>
    </div>
</div>
